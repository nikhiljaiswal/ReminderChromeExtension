{
    "manifest_version": 3,
    "name": "Reminder App",
    "version": "1.0",
    "description": "A Chrome extension that sets reminders and notifies after screen activity.",
    "permissions": [
        "notifications",
        "storage",
        "alarms",
        "idle"
    ],
    "host_permissions": [
        "https://api.emailjs.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "rem.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
